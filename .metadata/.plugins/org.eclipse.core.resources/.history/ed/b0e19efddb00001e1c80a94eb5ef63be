package conta_util;

public class Cores 
{
		//Resetar cor do Texto e plano de fundo
		public static final String RESETAR_CORES = "\u001B[0m";

		//Cores de Texto
		public static final String Texto_PRETO = "\u001B[30m";
		public static final String Texto_VERMELHO = "\u001B[31m";
		public static final String Texto_VERDE = "\u001B[32m";
		public static final String Texto_AMARELO = "\u001B[33m";
		public static final String Texto_AZUL = "\u001B[34m";
		public static final String Texto_ROXO = "\u001B[35m";
		public static final String Texto_CIANO = "\u001B[36m";
		public static final String Texto_BRANCO = "\u001B[37m";

		//Cores de Texto em negrito
		public static final String Texto_PRETO_NEGRITO = "\033[1;30m";
		public static final String Texto_VERMELHO_NEGRITO = "\033[1;31m";
		public static final String Texto_VERDE_NEGRITO = "\033[1;32m";
		public static final String Texto_AMARELO_NEGRITO = "\033[1;33m"; 
		public static final String Texto_AZUL_NEGRITO = "\033[1;34m";
		public static final String Texto_ROXO_NEGRITO = "\033[1;35m";
		public static final String Texto_CIANO_NEGRITO = "\033[1;36m";
		public static final String Texto_BRANCO_NEGRITO = "\033[1;37m";

		//Cores de Texto sublinhado
		public static final String Texto_PRETO_SUBLINHADO = "\033[4;30m"; 
		public static final String Texto_VERMELHO_SUBLINHADO = "\033[4;31m"; 
		public static final String Texto_VERDE_SUBLINHADO = "\033[4;32m"; 
		public static final String Texto_AMARELO_SUBLINHADO = "\033[4;33m"; 
		public static final String Texto_AZUL_SUBLINHADO = "\033[4;34m"; 
		public static final String Texto_ROXO_SUBLINHADO = "\033[4;35m"; 
		public static final String Texto_CIANO_SUBLINHADO = "\033[4;36m"; 
		public static final String Texto_BRANCO_SUBLINHADO = "\033[4;37m"; 
				
		//Cores de Texto intensas
		public static final String Texto_PRETO_INTENSO = "\033[0;90m";  
		public static final String Texto_VERMELHO_INTENSO = "\033[0;91m";    
		public static final String Texto_VERDE_INTENSO = "\033[0;92m";  
		public static final String Texto_AMARELO_INTENSO = "\033[0;93m"; 
		public static final String Texto_AZUL_INTENSO = "\033[0;94m";  
		public static final String Texto_ROXO_INTENSO = "\033[0;95m"; 
		public static final String Texto_CIANO_INTENSO = "\033[0;96m";   
		public static final String Texto_BRANCO_INTENSO = "\033[0;97m";  
		
		//Cores de Texto em negrito e intensas
		public static final String Texto_PRETO_NEGRITO_INTENSO = "\033[1;90m"; 
		public static final String Texto_VERMELHO_NEGRITO_INTENSO = "\033[1;91m";   
		public static final String Texto_VERDE_NEGRITO_INTENSO = "\033[1;92m"; 
		public static final String Texto_AMARELO_NEGRITO_INTENSO = "\033[1;93m";
		public static final String Texto_AZUL_NEGRITO_INTENSO = "\033[1;94m";  
		public static final String Texto_ROXO_NEGRITO_INTENSO = "\033[1;95m";
		public static final String Texto_CIANO_NEGRITO_INTENSO = "\033[1;96m";  
		public static final String Texto_BRANCO_NEGRITO_INTENSO = "\033[1;97m"; 
		
		//Cores do plano de fundo
		public static final String PRETO_PLANO_DE_FUNDO = "\u001B[40m";
		public static final String VERMELHO_PLANO_DE_FUNDO = "\u001B[41m";
		public static final String VERDE_PLANO_DE_FUNDO = "\u001B[42m";
		public static final String AMARELO_PLANO_DE_FUNDO = "\u001B[43m";
		public static final String AZUL_PLANO_DE_FUNDO = "\u001B[44m";
		public static final String ROXO_PLANO_DE_FUNDO = "\u001B[45m";
		public static final String CIANO_PLANO_DE_FUNDO = "\u001B[46m";
		public static final String BRANCO_PLANO_DE_FUNDO = "\u001B[47m";
				
		//Cores do plano de fundo intensos
		public static final String PRETO_PLANO_DE_FUNDO_INTENSO = "\033[0;100m";
		public static final String VERMELHO_PLANO_DE_FUNDO_INTENSO = "\033[0;101m";
		public static final String VERDE_PLANO_DE_FUNDO_INTENSO = "\033[0;102m";
		public static final String AMARELO_PLANO_DE_FUNDO_INTENSO = "\033[0;103m";
		public static final String AZUL_PLANO_DE_FUNDO_INTENSO = "\033[0;104m";
		public static final String ROXO_PLANO_DE_FUNDO_INTENSO = "\033[0;105m"; 
		public static final String CIANO_PLANO_DE_FUNDO_INTENSO = "\033[0;106m";  
		public static final String BRANCO_PLANO_DE_FUNDO_INTENSO = "\033[0;107m";
}
